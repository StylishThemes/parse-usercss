{
  "name": "usercss-meta",
  "version": "0.5.0",
  "description": "Parse the metadata of usercss used by Stylus extension",
  "license": "MIT",
  "repository": "StylishThemes/parse-usercss",
  "author": {
    "name": "StylishThemes",
    "url": "https://github.com/StylishThemes"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "test": "xo && nyc ava",
    "build": "shx rm -rf dist && rollup -c && rollup -c --environment=UGLIFY",
    "coverage": "nyc report --reporter=html",
    "prepack": "npm run build",
    "preversion": "node prepare-release.js && npm test",
    "postversion": "git push --follow-tags && npm publish"
  },
  "files": [
    "index.js",
    "lib",
    "dist"
  ],
  "browser": {
    "url": "./shim/url.js"
  },
  "unpkg": "dist/usercss-meta.js",
  "keywords": [
    "css",
    "usercss",
    "parser",
    "parse",
    "stringify"
  ],
  "devDependencies": {
    "ava": "*",
    "nyc": "^11.8.0",
    "rollup": "^0.58.2",
    "rollup-plugin-cjs-es": "^0.3.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-uglify": "^3.0.0",
    "shx": "^0.2.2",
    "xo": "*"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "rules": {
      "capitalized-comments": 0,
      "comma-dangle": 0,
      "curly": 0,
      "default-case": 0,
      "import/prefer-default-export": 0,
      "linebreak-style": 0,
      "new-cap": 0,
      "no-mixed-operators": 0,
      "operator-linebreak": 0,
      "padded-blocks": 0,
      "prefer-destructuring": 0,
      "quote-props": 0,
      "quotes": [
        2,
        "single",
        {
          "avoidEscape": true
        }
      ],
      "unicorn/prefer-starts-ends-with": 0
    }
  }
}
